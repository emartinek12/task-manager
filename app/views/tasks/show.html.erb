<h2><%= @task.title %></h2>
<% if @task.completed == true %>
  <i class="fas fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
<p><%= @task.details %></p>
<br>

<%= link_to "Back to Tasks", tasks_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" }
%>
<%= link_to "Edit task", edit_path %>
